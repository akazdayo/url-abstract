---
import "../styles/global.css";
import { ApiKeyChecker } from "../components/ApiKeyChecker";
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>URL-Abstract</title>
	</head>
	<body class="bg-white min-h-screen">
		<div
			class="flex flex-col items-center justify-center min-h-screen px-4"
		>
			<div class="w-full max-w-md">
				<div class="text-center mb-8">
					<h1 class="text-5xl font-normal text-gray-900 mb-2">
						URL-Abstract
					</h1>
					<p class="text-gray-600">URLを入力してAIによる要約を生成</p>
				</div>

				<div
					class="bg-white rounded-lg shadow-sm border border-gray-200 p-6"
				>
					<form class="space-y-4">
						<div>
							<label
								for="url"
								class="block text-sm font-medium text-gray-700 mb-2"
								>URL</label
							>
							<input
								type="url"
								id="url"
								name="url"
								placeholder="https://example.com"
								class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
								required
							/>
						</div>

						<button
							type="submit"
							class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
						>
							要約を生成
						</button>
					</form>
				</div>

				<div class="text-center mt-6">
					<a
						href="/history/"
						class="text-blue-600 hover:text-blue-800 text-sm"
						>履歴を見る</a
					>
				</div>
			</div>
		</div>

		<ApiKeyChecker client:load />
	</body>
</html>
